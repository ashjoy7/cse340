<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
    <link href="/css/larger.css" rel="stylesheet" type="text/css"/>
    <link href="/css/smaller.css" rel="stylesheet" type="text/css"/>
    <title>Inventory Management</title>
</head>
<body>
    <div id="wrapper">
        <%- include('../partials/header.ejs') %>
        <%- include('../partials/navigation.ejs', { nav: nav }) %> <!-- Pass nav here -->

        <main>
            <h1>Inventory Management</h1>
            
            <% if (messages && messages.notice) { %>
                <div class="flash-messages">
                    <% messages.notice.forEach(function(message) { %>
                        <div class="alert alert-info"><%= message %></div>
                    <% }) %>
                </div>
            <% } %>

            <ul>
                <li><a href="/inv/add-classification">Add New Classification</a></li>
                <li><a href="/inv/add-inventory">Add New Inventory</a></li>
            </ul>
        </main>

        <%- include('../partials/footer.ejs') %>
    </div>
</body>
</html>
