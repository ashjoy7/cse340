<h1>Edit Vehicle</h1>
<h1><%- inv_make %> <%- inv_model %></h1>

<form action="/inv/edit-inventory/:inv_id" method="post">

    <label for="classification_id">Classification:</label>
    <%- classificationSelect %>
    
    <label for="inv_make">Make:</label>
    <input type="text" id="inv_make" name="inv_make" pattern="[A-Za-z]+" value="<%= inv_make %>" required>

    <label for="inv_model">Model:</label>
    <input type="text" id="inv_model" name="inv_model" pattern="[A-Za-z]+" value="<%= inv_model %>" required>

    <label for="inv_year">Year:</label>
    <input type="number" id="inv_year" name="inv_year" min="1886" max="2099" value="<%= inv_year %>" required>

    <label for="inv_description">Description:</label>
    <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>

    <label for="inv_image">Image:</label>
    <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" readonly>

    <label for="inv_thumbnail">Thumbnail:</label>
    <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>" readonly>

    <label for="inv_price">Price:</label>
    <input type="number" id="inv_price" name="inv_price" min="0" value="<%= inv_price %>" required>

    <label for="inv_miles">Miles:</label>
    <input type="number" id="inv_miles" name="inv_miles" min="0" value="<%= inv_miles %>" required>

    <label for="inv_color">Color:</label>
    <input type="text" id="inv_color" name="inv_color" pattern="[A-Za-z]+" value="<%= inv_color %>" required>

    <input type="submit" name="submit" value="Update Vehicle">
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>