<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% if (messages && messages.notice) { %>
    <div class="flash-messages">
        <% messages.notice.forEach(function(message) { %>
            <div class="alert alert-success"><%= message %></div>
        <% }) %>
    </div>
<% } %>

<% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>


<div class="register-container">
    <p>All fields are required</p>
    <form id="registerForm" method="post" action="/account/register">
        <div class="form-group">
            <label for="firstname">First Name*</label>
            <input type="text" name="account_firstname" id="firstname" size="10" required value="<%= locals.account_firstname %>">
        </div>
        <div class="form-group">
            <label for="lastname">Last Name*</label>
            <input type="text" name="account_lastname" id="lastname" required value="<%= locals.account_lastname %>">
        </div>
        <div class="form-group">
            <label for="email">Email*</label>
            <input type="email" name="account_email" id="email" placeholder="someone@gmail.com" required value="<%= locals.account_email || '' %>">
        </div>
        <div class="form-group">
            <label for="password">Password*</label>
            <input type="password" name="account_password" id="password" required
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{12,}$">
            <div><i>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</i></div>
        </div>
        <button type="submit" class="submitBtn">Register</button>
    </form>
</div>

<script src="/js/script.js"></script>