<!-- Content Heading -->
<% if (title) { %>
    <h1><%= title %></h1>
<% } %>

<!-- Display flash messages -->
<% if (messages && messages.notice) { %>
    <div class="flash-messages">
        <% messages.notice.forEach(function(message) { %>
            <div class="alert alert-success"><%= message %></div>
        <% }) %>
    </div>
<% } %>

<% if (errors && errors.length > 0) { %>
    <ul class="notice">
        <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<!-- Display errors (if any) -->
<% if (errors) { %>
<ul class="notice">
<% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
<%  }) %>
</ul>
<% } %>

<!-- Display content -->
<div id="inbox-wrapper">
    <ul>
        <li><a href="/message/create">Create New Message</a></li>
        <li><a href="/message/archives">View <%= locals.archived_messages %> Archived Messages</a></li>
    </ul>
    
    <%- inboxTable %>

</div>